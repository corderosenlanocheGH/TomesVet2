<%- include('partials/head', { title: 'Historia clínica | TomesVet' }) %>
<%
  const formatShortDate = (value = '') => {
    if (!value) return '';
    const normalized = value.toString().split('T')[0];
    const [year, month, day] = normalized.split('-');
    if (year && month && day) {
      return `${day}/${month}/${year}`;
    }
    const parsed = new Date(value);
    if (!Number.isNaN(parsed.getTime())) {
      return parsed.toLocaleDateString('es-AR');
    }
    return value;
  };

  const currentDate = new Date().toISOString().split('T')[0];
%>
<%- include('partials/nav') %>

<main class="content-area">
  <div class="row g-4">
    <% if (showForm) { %>
      <div class="col-12">
        <div class="card border-0 shadow-sm">
          <div class="card-body">
            <h4 class="card-title mb-3">Nueva Ficha medica</h4>
            <form action="/historia-clinica" method="POST" enctype="multipart/form-data" class="d-grid gap-3">
              <div class="row g-3">
                <div class="col-md-4">
                  <label class="form-label">Mascota</label>
                  <select class="form-select" name="mascota_id" required>
                    <option value="" disabled selected>Selecciona una mascota</option>
                    <% mascotas.forEach((mascota) => { %>
                      <option
                        value="<%= mascota.id %>"
                        <%= selectedMascotaId && Number(selectedMascotaId) === mascota.id ? 'selected' : '' %>
                      >
                        <%= mascota.nombre %>
                      </option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Fecha</label>
                  <input class="form-control" type="date" name="fecha" value="<%= currentDate %>" required />
                </div>
                <div class="col-md-4">
                  <label class="form-label">Motivo</label>
                  <input class="form-control" type="text" name="motivo" required />
                </div>
              </div>
              <div>
                <label class="form-label">Aspecto general</label>
                <textarea class="form-control" name="aspecto_general" rows="2"></textarea>
              </div>
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Estado de nutrición</label>
                  <select class="form-select" name="estado_nutricion">
                    <option value="">Seleccionar</option>
                    <option value="Normal">Normal</option>
                    <option value="Desnutrido">Desnutrido</option>
                    <option value="Delgado">Delgado</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Última desparacitación</label>
                  <input class="form-control" type="date" name="ultima_desparacitacion" />
                </div>
              </div>
              <div class="row g-3">
                <div class="col-md-3">
                  <label class="form-label">Frecuencia Cardíaca</label>
                  <input class="form-control" type="text" name="frecuencia_cardiaca" />
                </div>
                <div class="col-md-3">
                  <label class="form-label">Frecuencia Respiratoria</label>
                  <input class="form-control" type="text" name="frecuencia_respiratoria" />
                </div>
                <div class="col-md-3">
                  <label class="form-label">Hidratación</label>
                  <input class="form-control" type="text" name="hidratacion" />
                </div>
                <div class="col-md-3">
                  <label class="form-label">Temperatura</label>
                  <input class="form-control" type="text" name="temperatura" />
                </div>
              </div>
              <div>
                <label class="form-label">Estado de Mucosa</label>
                <div class="table-responsive">
                  <table class="table table-sm align-middle mb-0">
                    <thead>
                      <tr>
                        <th>Palpebral</th>
                        <th>Escleral</th>
                        <th>Bucal</th>
                        <th>Vul/Pen</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>
                          <select class="form-select form-select-sm" name="mucosa_palpebral">
                            <option value="">-</option>
                            <option value="Normal">Normal</option>
                            <option value="Congestiva">Congestiva</option>
                            <option value="Pálida">Pálida</option>
                          </select>
                        </td>
                        <td>
                          <select class="form-select form-select-sm" name="mucosa_escleral">
                            <option value="">-</option>
                            <option value="Normal">Normal</option>
                            <option value="Congestiva">Congestiva</option>
                            <option value="Pálida">Pálida</option>
                          </select>
                        </td>
                        <td>
                          <select class="form-select form-select-sm" name="mucosa_bucal">
                            <option value="">-</option>
                            <option value="Normal">Normal</option>
                            <option value="Congestiva">Congestiva</option>
                            <option value="Pálida">Pálida</option>
                          </select>
                        </td>
                        <td>
                          <select class="form-select form-select-sm" name="mucosa_vulpen">
                            <option value="">-</option>
                            <option value="Normal">Normal</option>
                            <option value="Congestiva">Congestiva</option>
                            <option value="Pálida">Pálida</option>
                          </select>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
              <div>
                <label class="form-label">Diagnóstico presuntivo</label>
                <textarea class="form-control" name="diagnostico_presuntivo" rows="2"></textarea>
              </div>
              <div>
                <label class="form-label">Diagnóstico diferencial</label>
                <textarea class="form-control" name="diagnostico_diferencial" rows="2"></textarea>
              </div>
              <div>
                <label class="form-label">Diagnóstico definitivo</label>
                <textarea class="form-control" name="diagnostico_definitivo" rows="2"></textarea>
              </div>
              <div>
                <label class="form-label">Análisis solicitados</label>
                <textarea class="form-control" name="analisis_solicitados" rows="2"></textarea>
              </div>
              <div>
                <label class="form-label">Tratamiento y medicación</label>
                <textarea class="form-control" name="tratamiento" rows="2"></textarea>
              </div>
              <div>
                <label class="form-label">Otros Datos</label>
                <textarea class="form-control" name="otros_datos" rows="2"></textarea>
              </div>
              <div>
                <label class="form-label">Documentación adjunta (PDF)</label>
                <input
                  class="form-control"
                  type="file"
                  name="documentacion_adjunta"
                  accept="application/pdf,.pdf"
                />
              </div>
              <div class="d-flex gap-2">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a class="btn btn-outline-secondary" href="/historia-clinica">Cancelar</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    <% } else { %>
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-3">
            <h4 class="card-title mb-0">Historial clínico</h4>
            <div class="d-flex flex-wrap gap-2 historia-filters">
              <div class="d-flex align-items-end">
                <a class="btn btn-primary" href="/historia-clinica?nuevo=1">Nueva Ficha medica</a>
              </div>
              <div>
                <label class="form-label mb-1" for="historia-busqueda">Buscar</label>
                <input
                  class="form-control"
                  type="search"
                  id="historia-busqueda"
                  placeholder="Mascota, motivo o diagnóstico"
                />
              </div>
              <div>
                <label class="form-label mb-1" for="historia-mascota">Mascota</label>
                <select class="form-select" id="historia-mascota">
                  <option value="">Todas</option>
                  <% mascotas.forEach((mascota) => { %>
                    <option
                      value="<%= mascota.id %>"
                      <%= selectedMascotaId && Number(selectedMascotaId) === mascota.id ? 'selected' : '' %>
                    >
                      <%= mascota.nombre %>
                    </option>
                  <% }) %>
                </select>
              </div>
              <div>
                <label class="form-label mb-1" for="historia-desde">Desde</label>
                <input class="form-control" type="date" id="historia-desde" />
              </div>
              <div>
                <label class="form-label mb-1" for="historia-hasta">Hasta</label>
                <input class="form-control" type="date" id="historia-hasta" />
              </div>
              <div class="d-flex align-items-end">
                <button class="btn btn-outline-secondary" type="button" id="historia-limpiar">
                  Limpiar
                </button>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Mascota</th>
                  <th>Fecha</th>
                  <th>Motivo</th>
                  <th>Aspecto general</th>
                </tr>
              </thead>
              <tbody id="historias-body">
                <% historias.forEach((historia) => { %>
                  <tr
                    data-mascota-id="<%= historia.mascota_id %>"
                    data-fecha="<%= historia.fecha ? historia.fecha.toString().split('T')[0] : '' %>"
                  >
                    <td>
                      <a href="/historia-clinica/<%= historia.id %>">
                        <%= historia.mascota_nombre %>
                      </a>
                    </td>
                    <td><%= formatShortDate(historia.fecha) %></td>
                    <td><%= historia.motivo %></td>
                    <td><%= historia.aspecto_general || '-' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</main>

<script>
  const historiaBody = document.getElementById('historias-body');
  const buscarHistoria = document.getElementById('historia-busqueda');
  const mascotaFilter = document.getElementById('historia-mascota');
  const fechaDesde = document.getElementById('historia-desde');
  const fechaHasta = document.getElementById('historia-hasta');
  const limpiarHistoria = document.getElementById('historia-limpiar');

  const normalizeText = (value = '') =>
    value
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .trim();

  const parseDate = (value) => {
    if (!value) return null;
    const parsed = new Date(value);
    if (Number.isNaN(parsed.getTime())) {
      return null;
    }
    return parsed;
  };

  const historiaRows = Array.from(historiaBody?.querySelectorAll('tr') || []);

  const applyHistoriaFilters = () => {
    const query = normalizeText(buscarHistoria.value);
    const mascotaId = mascotaFilter.value;
    const desde = parseDate(fechaDesde.value);
    const hasta = parseDate(fechaHasta.value);

    historiaRows.forEach((row) => {
      const rowText = normalizeText(row.textContent);
      const rowMascota = row.dataset.mascotaId || '';
      const rowDate = parseDate(row.dataset.fecha);
      const mascotaMatch = !mascotaId || rowMascota === mascotaId;
      const textMatch = !query || rowText.includes(query);
      const desdeMatch = !desde || (rowDate && rowDate >= desde);
      const hastaMatch = !hasta || (rowDate && rowDate <= hasta);
      row.classList.toggle('is-hidden', !(mascotaMatch && textMatch && desdeMatch && hastaMatch));
    });
  };

  const clearHistoriaFilters = () => {
    buscarHistoria.value = '';
    mascotaFilter.value = '';
    fechaDesde.value = '';
    fechaHasta.value = '';
    applyHistoriaFilters();
  };

  if (historiaBody && buscarHistoria && mascotaFilter && fechaDesde && fechaHasta && limpiarHistoria) {
    buscarHistoria.addEventListener('input', applyHistoriaFilters);
    mascotaFilter.addEventListener('change', applyHistoriaFilters);
    fechaDesde.addEventListener('change', applyHistoriaFilters);
    fechaHasta.addEventListener('change', applyHistoriaFilters);
    limpiarHistoria.addEventListener('click', clearHistoriaFilters);
    applyHistoriaFilters();
  }
</script>

<%- include('partials/footer') %>
