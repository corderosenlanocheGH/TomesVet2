<%- include('partials/head', { title: 'Especies y razas | TomesVet' }) %>
<%- include('partials/nav') %>

<main class="content-area">
  <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-4">
    <div>
      <h2 class="h4 mb-1">Especies y razas de mascotas</h2>
      <p class="text-muted mb-0">Administra las opciones disponibles para registrar mascotas.</p>
    </div>
    <a class="btn btn-outline-secondary" href="/configuracion">Volver a configuración</a>
  </div>

  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <h4 class="card-title mb-3">Nueva especie</h4>
          <form action="/mascotas/especie" method="POST" class="d-grid gap-3">
            <div>
              <label class="form-label">Nombre de especie</label>
              <input class="form-control" type="text" name="nombre" placeholder="Ej: Perro" required />
            </div>
            <button class="btn btn-primary" type="submit">Agregar especie</button>
          </form>

          <hr class="my-4" />

          <h5 class="mb-3">Especies registradas</h5>
          <% if (!especiesMascota.length) { %>
            <p class="text-muted mb-0">No hay especies cargadas aún.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th>Especie</th>
                    <th class="text-end">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% especiesMascota.forEach((especie) => { %>
                    <tr>
                      <td><%= especie.nombre %></td>
                      <td class="text-end">
                        <form action="/mascotas/especie/<%= especie.id %>/eliminar" method="POST" class="d-inline">
                          <button class="btn btn-outline-danger btn-sm" type="submit">Eliminar</button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <h4 class="card-title mb-3">Nueva raza</h4>
          <form action="/mascotas/raza" method="POST" class="d-grid gap-3">
            <div>
              <label class="form-label">Especie</label>
              <select class="form-select" name="especie_id" required>
                <option value="" disabled selected>Selecciona una especie</option>
                <% especiesMascota.forEach((especie) => { %>
                  <option value="<%= especie.id %>"><%= especie.nombre %></option>
                <% }) %>
              </select>
            </div>
            <div>
              <label class="form-label">Nombre de raza</label>
              <input class="form-control" type="text" name="nombre" placeholder="Ej: Labrador" required />
            </div>
            <button class="btn btn-primary" type="submit">Agregar raza</button>
          </form>

          <hr class="my-4" />

          <h5 class="mb-3">Razas registradas</h5>
          <% if (!razasMascota.length) { %>
            <p class="text-muted mb-0">No hay razas cargadas aún.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th>Especie</th>
                    <th>Raza</th>
                    <th class="text-end">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% razasMascota.forEach((raza) => { %>
                    <tr>
                      <td><%= raza.especie_nombre || 'Sin especie' %></td>
                      <td><%= raza.nombre %></td>
                      <td class="text-end">
                        <form action="/mascotas/raza/<%= raza.id %>/eliminar" method="POST" class="d-inline">
                          <button class="btn btn-outline-danger btn-sm" type="submit">Eliminar</button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
