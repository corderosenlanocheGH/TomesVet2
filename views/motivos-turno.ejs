<%- include('partials/head', { title: 'Motivos de turnos | TomesVet' }) %>
<%- include('partials/nav') %>

<main class="content-area">
  <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-4">
    <div>
      <h2 class="h4 mb-1">Motivos de turnos</h2>
      <p class="text-muted mb-0">Administra las opciones disponibles para cargar turnos.</p>
    </div>
    <a class="btn btn-outline-secondary" href="/configuracion">Volver a configuración</a>
  </div>
  <div class="row g-4">
    <div class="col-lg-5">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h4 class="card-title mb-3">Nuevo motivo</h4>
          <form action="/motivos-turno" method="POST" class="d-grid gap-3">
            <div>
              <label class="form-label">Nombre del motivo</label>
              <input
                class="form-control"
                type="text"
                name="nombre"
                placeholder="Ej: Consulta general"
                required
              />
            </div>
            <button class="btn btn-primary" type="submit">Agregar motivo</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-7">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h4 class="card-title mb-3">Motivos registrados</h4>
          <% if (!motivosTurno.length) { %>
            <p class="text-muted mb-0">
              Aún no hay motivos registrados. Agrega el primero para usarlo en los turnos.
            </p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table align-middle">
                <thead>
                  <tr>
                    <th>Motivo</th>
                    <th class="text-end">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% motivosTurno.forEach((motivo) => { %>
                    <tr>
                      <td><%= motivo.nombre %></td>
                      <td class="text-end">
                        <form
                          action="/motivos-turno/<%= motivo.id %>/eliminar"
                          method="POST"
                          class="d-inline"
                        >
                          <button class="btn btn-outline-danger btn-sm" type="submit">
                            Eliminar
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
