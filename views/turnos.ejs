<%- include('partials/head', { title: 'Turnos | TomesVet' }) %>
<% const estadosTurno = ['Pendiente', 'Terminado', 'Cancelado']; %>
<%
  const getStatusSlug = (value = '') =>
    value
      .toString()
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .trim()
      .replace(/\s+/g, '-');
  const formatShortDate = (value = '') => {
    if (!value) return '';
    const date = new Date(value);
    if (!Number.isNaN(date.getTime())) {
      const day = String(date.getDate()).padStart(2, '0');
      const month = String(date.getMonth() + 1).padStart(2, '0');
      const year = date.getFullYear();
      return `${day}/${month}/${year}`;
    }
    const normalized = value.toString().split('T')[0];
    const [year, month, day] = normalized.split('-');
    if (year && month && day) {
      return `${day}/${month}/${year}`;
    }
    return value;
  };
  const formatShortTime = (value = '') => {
    if (!value) return '';
    const [hours, minutes] = value.toString().split(':');
    if (hours && minutes) {
      return `${hours}:${minutes}`;
    }
    return value;
  };

  const sanitizePhoneForWhatsapp = (rawPhone = '') =>
    rawPhone
      .toString()
      .trim()
      .replace(/[^\d]/g, '')
      .replace(/^0+/, '');
%>
<%- include('partials/nav') %>

<main class="content-area">
  <div class="row g-4">
    <% if (showForm) { %>
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
          <div class="card-body">
            <h4 class="card-title mb-3">Solicitar turno</h4>
            <form action="/turnos" method="POST" class="d-grid gap-3">
              <div>
                <label class="form-label">Cliente</label>
                <select class="form-select" name="cliente_id" id="cliente-select" required>
                  <option value="" disabled selected>Selecciona un cliente</option>
                  <% clientes.forEach((cliente) => { %>
                    <option value="<%= cliente.id %>"><%= cliente.nombre %></option>
                  <% }) %>
                </select>
              </div>
              <div>
                <label class="form-label">Mascota</label>
                <select class="form-select" name="mascota_id" id="mascota-select" required>
                  <option value="" disabled selected>Selecciona una mascota</option>
                  <% mascotas.forEach((mascota) => { %>
                    <option value="<%= mascota.id %>" data-cliente-id="<%= mascota.cliente_id %>">
                      <%= mascota.nombre %> (Cliente: <%= mascota.cliente_nombre %>)
                    </option>
                  <% }) %>
                </select>
              </div>
              <div>
                <label class="form-label">Fecha</label>
                <input class="form-control" type="date" name="fecha" required />
              </div>
              <div>
                <label class="form-label">Hora</label>
                <input class="form-control" type="time" name="hora" required />
              </div>
              <div>
                <label class="form-label">Motivo</label>
                <select class="form-select" name="motivo" required>
                  <option value="" disabled selected>Selecciona un motivo</option>
                  <% motivosTurno.forEach((motivo) => { %>
                    <option value="<%= motivo.nombre %>"><%= motivo.nombre %></option>
                  <% }) %>
                </select>
              </div>
              <div class="d-flex gap-2">
                <button class="btn btn-primary" type="submit">Agendar</button>
                <a class="btn btn-outline-secondary" href="/turnos">Cancelar</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    <% } %>
    <div class="<%= showForm ? 'col-lg-8' : 'col-12' %>">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-3">
            <h4 class="card-title mb-0">Turnos registrados</h4>
            <div class="d-flex flex-wrap gap-2 turnos-filters">
              <div class="d-flex align-items-end">
                <a class="btn btn-primary" href="/turnos?nuevo=1">Nuevo turno</a>
              </div>
              <div>
                <label class="form-label mb-1" for="turnos-busqueda">Buscar</label>
                <input
                  class="form-control"
                  type="search"
                  id="turnos-busqueda"
                  placeholder="Cliente, mascota o motivo"
                />
              </div>
              <div>
                <label class="form-label mb-1" for="turnos-estado">Estado</label>
                <select class="form-select" id="turnos-estado">
                  <option value="">Todos</option>
                </select>
              </div>
              <div class="d-flex align-items-end">
                <button class="btn btn-outline-secondary" type="button" id="turnos-limpiar">Limpiar</button>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Cliente</th>
                  <th>Mascota</th>
                  <th>Fecha</th>
                  <th>Hora</th>
                  <th>Motivo</th>
                  <th>Estado</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody id="turnos-body">
                <% turnos.forEach((turno) => {
                  const phoneSanitized = sanitizePhoneForWhatsapp(turno.cliente_telefono);
                  const whatsappMessage = encodeURIComponent(`Hola, ${turno.mascota_nombre} ya esta listo`);
                  const whatsappUrl = phoneSanitized
                    ? `https://wa.me/${phoneSanitized}?text=${whatsappMessage}`
                    : '';
                %>
                  <tr data-estado="<%= turno.estado %>" data-status-slug="<%= getStatusSlug(turno.estado) %>">
                    <td><%= turno.cliente_nombre %></td>
                    <td><%= turno.mascota_nombre %></td>
                    <td><%= formatShortDate(turno.fecha) %></td>
                    <td><%= formatShortTime(turno.hora) %></td>
                    <td><%= turno.motivo %></td>
                    <td>
                      <form
                        action="/turnos/<%= turno.id %>/estado"
                        method="POST"
                        class="d-flex flex-column gap-2 turno-estado-form"
                      >
                        <div class="d-flex flex-wrap gap-3">
                          <% estadosTurno.forEach((estado) => { %>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                type="radio"
                                name="estado"
                                id="estado-<%= turno.id %>-<%= estado %>"
                                value="<%= estado %>"
                                <%= turno.estado === estado ? 'checked' : '' %>
                              />
                              <label class="form-check-label" for="estado-<%= turno.id %>-<%= estado %>">
                                <%= estado %>
                              </label>
                            </div>
                          <% }) %>
                        </div>
                      </form>
                    </td>
                    <td>
                      <% if (whatsappUrl) { %>
                        <a
                          class="btn btn-sm btn-success"
                          href="<%= whatsappUrl %>"
                          target="_blank"
                          rel="noopener noreferrer"
                        >
                          <i class="bi bi-whatsapp"></i>
                          Enviar WhatsApp
                        </a>
                      <% } else { %>
                        <span class="text-muted small">Sin número válido</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  const clienteSelect = document.getElementById('cliente-select');
  const mascotaSelect = document.getElementById('mascota-select');
  const mascotaOptions = mascotaSelect
    ? Array.from(mascotaSelect.querySelectorAll('option'))
    : [];
  const turnosBody = document.getElementById('turnos-body');
  const estadoSelect = document.getElementById('turnos-estado');
  const buscarInput = document.getElementById('turnos-busqueda');
  const limpiarButton = document.getElementById('turnos-limpiar');

  const renderMascotas = (clienteId) => {
    if (!mascotaSelect) {
      return;
    }
    mascotaSelect.innerHTML = '';
    const placeholder = document.createElement('option');
    placeholder.value = '';
    placeholder.disabled = true;
    placeholder.selected = true;
    placeholder.textContent = 'Selecciona una mascota';
    mascotaSelect.appendChild(placeholder);

    mascotaOptions
      .filter((option) => option.value)
      .filter((option) => !clienteId || option.dataset.clienteId === clienteId)
      .forEach((option) => mascotaSelect.appendChild(option));
  };

  if (clienteSelect && mascotaSelect) {
    clienteSelect.addEventListener('change', (event) => {
      renderMascotas(event.target.value);
    });
  }

  const normalizeText = (value = '') =>
    value
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .trim();

  const estadosTurno = <%- JSON.stringify(estadosTurno) %>;
  const turnosRows = Array.from(turnosBody?.querySelectorAll('tr') || []);
  const estadoForms = Array.from(document.querySelectorAll('.turno-estado-form'));
  estadoForms.forEach((form) => {
    form.addEventListener('change', (event) => {
      if (event.target?.name === 'estado') {
        form.submit();
      }
    });
  });
  estadosTurno.forEach((estado) => {
    const option = document.createElement('option');
    option.value = estado;
    option.textContent = estado;
    estadoSelect.appendChild(option);
  });

  const applyTurnosFilter = () => {
    const estado = estadoSelect.value;
    const query = normalizeText(buscarInput.value);

    turnosRows.forEach((row) => {
      const estadoValue = row.dataset.estado || '';
      const rowText = normalizeText(row.textContent);
      const estadoMatch = !estado || estadoValue === estado;
      const textMatch = !query || rowText.includes(query);
      row.classList.toggle('is-hidden', !(estadoMatch && textMatch));
    });
  };

  const clearTurnosFilters = () => {
    buscarInput.value = '';
    estadoSelect.value = '';
    applyTurnosFilter();
  };

  buscarInput.addEventListener('input', applyTurnosFilter);
  estadoSelect.addEventListener('change', applyTurnosFilter);
  limpiarButton.addEventListener('click', clearTurnosFilters);
</script>

<%- include('partials/footer') %>
