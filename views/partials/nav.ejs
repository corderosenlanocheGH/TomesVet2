<div class="app-shell">
  <% const clinic = configuracionClinica || {}; %>
  <% const veterinariaNombre = clinic.veterinaria_nombre || 'TomesVet'; %>
  <% const medicaNombre = clinic.medica_nombre || ''; %>
  <% const medicaMatricula = clinic.medica_matricula || ''; %>
  <% const logoRuta = clinic.logo_ruta || ''; %>
  <% const brandInitials = veterinariaNombre
    .split(' ')
    .filter(Boolean)
    .slice(0, 2)
    .map((word) => word[0]?.toUpperCase())
    .join('') || 'TV'; %>
  <aside class="sidebar">
    <div class="sidebar-header">
      <div class="sidebar-brand-wrap">
        <% if (logoRuta) { %>
          <img class="sidebar-brand-logo" src="<%= logoRuta %>" alt="Logo de <%= veterinariaNombre %>" />
        <% } else { %>
          <div class="sidebar-brand-logo sidebar-brand-logo-fallback"><%= brandInitials %></div>
        <% } %>
        <span class="sidebar-brand"><%= veterinariaNombre %></span>
      </div>
      <button class="sidebar-toggle" type="button" aria-label="Mostrar menú">
        <i class="bi bi-list"></i>
      </button>
    </div>
    <div class="sidebar-user">
      <div>
        <% if (medicaNombre) { %>
          <p class="sidebar-name"><%= medicaNombre %></p>
        <% } else { %>
          <p class="sidebar-name">Médica no configurada</p>
        <% } %>
        <% if (medicaMatricula) { %>
          <span class="sidebar-role d-block">Matrícula: <%= medicaMatricula %></span>
        <% } %>
      </div>
    </div>
    <nav class="sidebar-nav">
      <a class="sidebar-link" href="/"><i class="bi bi-house-heart"></i>Inicio</a>
      <a class="sidebar-link" href="/clientes"><i class="bi bi-people"></i>Clientes</a>
      <a class="sidebar-link" href="/mascotas"><i class="bi bi-heart-pulse"></i>Mascotas</a>
      <a class="sidebar-link" href="/vacunas"><i class="bi bi-capsule"></i>Vacunas</a>
      <a class="sidebar-link" href="/vacunas/proximas"><i class="bi bi-whatsapp"></i>Recordatorio vacunas</a>
      <a class="sidebar-link" href="/turnos"><i class="bi bi-calendar-check"></i>Turnos</a>
      <a class="sidebar-link" href="/historia-clinica"><i class="bi bi-clipboard2-heart"></i>Historia clínica</a>
    </nav>
    <a class="sidebar-footer" href="/configuracion">
      <i class="bi bi-gear"></i>
      Configuración
    </a>
  </aside>

  <div class="app-main">
    <header class="topbar">
      <div class="topbar-title">
        <i class="bi bi-stars"></i>
        Diseño prequirúrgico TomesVet
      </div>
      <div class="topbar-actions">
        <button class="topbar-icon" type="button" aria-label="Notificaciones">
          <i class="bi bi-bell"></i>
        </button>
        <div class="topbar-user">
          <div class="topbar-avatar">AV</div>
          <div>
            <p class="topbar-name">Abel OS</p>
            <span class="topbar-role">Administrador</span>
          </div>
        </div>
      </div>
    </header>
